{
  "name": "algocks",
  "version": "1.0.0",
  "description": "Mock Algolia Server, primarily for e2e testing purposes.",
  "main": "dist/index.js",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "tsc",
    "start": "tsc & node .",
    "dev": "tsc -w & nodemon .",
    "lint:fix": "eslint '*/**/*.{js,ts}' --quiet --fix",
    "test": "NODE_ENV=test jest --detectOpenHandles --runInBand",
    "test:coverage": "yarn test --coverage",
    "test:watch": "yarn test --watch"
  },
  "keywords": [
    "algolia",
    "mock",
    "server",
    "e2e",
    "testing"
  ],
  "author": "Prabhat Shrestha <tasker.prabhat@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/13colours/algocks"
  },
  "bugs": {
    "url": "https://github.com/13colours/algocks/issues"
  },
  "homepage": "https://github.com/13colours/algocks#readme",
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/dotenv-flow": "^3.1.0",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/minimist": "^1.2.1",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.12.2",
    "@types/rc": "^1.1.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "flexsearch": "^0.7.0",
    "morgan": "^1.10.0",
    "rc": "^1.2.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
